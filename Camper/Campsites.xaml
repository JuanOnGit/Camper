<Page x:Class="Camper.Campsites"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Camper"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Campsites">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Campsites" FontSize="16" Margin="8"/>

        <ListView Grid.Row="1" Name="CampsitesList" Margin="8" ItemsSource="{Binding Campsites}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}" Width="200"/>
                    <GridViewColumn Header="Capacity" DisplayMemberBinding="{Binding Capacity}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
