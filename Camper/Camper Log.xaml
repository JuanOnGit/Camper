<Page x:Class="Camper.Camper_Log"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Camper"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Camper_Log">

    <DockPanel LastChildFill="True">
        <Button Content="Save Logs"
            DockPanel.Dock="Bottom"
            HorizontalAlignment="Right"
            Margin="10"
            Width="100"
            Background="ForestGreen"
            Click="SaveLogs_Click"/>
        <DataGrid x:Name="dataGrid"
              AutoGenerateColumns="False"
              CanUserAddRows="True"
              AddingNewItem="camperLog_AddingNewItem">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding LogDate, StringFormat=d, Mode=TwoWay}" Width="*"/>
                <DataGridTextColumn Header="Time" Binding="{Binding LogDate, StringFormat=t, Mode=TwoWay}" Width="*"/>
                <DataGridTextColumn Header="Incident" Binding="{Binding Incident, Mode=TwoWay}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
